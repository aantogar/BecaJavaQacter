package programaFichero;

import java.io.File;
import java.util.Scanner;

public class LeyendoFichero {

	public static void main(String[] args) {
		File fichero=new File("C:\\Users\\andrea.anton.garcia\\OneDrive - Accenture\\Documents\\nombre.txt");
		try(Scanner newfile=new Scanner(fichero)){
			//en vez de utilizar nextLine, puedo...
			newfile.useDelimiter("");
			while(newfile.hasNext()) {
				String cadena=newfile.next();
				System.out.print(cadena +"");
			}
		}catch(Exception e) {
			e.printStackTrace();
		}
	} 

}
