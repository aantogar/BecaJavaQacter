package productos;

import java.util.Scanner;

public class Agua extends Congelados{
	private String nitro;
	private String oxigeno;
	private String dioxido;
	private String vapor;

	public Agua(String ox, String diox, String vap, String nitro) {
		super("-4", "agua");
		this.oxigeno=ox;
		this.dioxido=diox;
		this.vapor=vap;
		this.nitro=nitro;
		// TODO Auto-generated constructor stub
	}
	public String getNitro() {
		return nitro;
	}
	public void setNitro(String nitro) {
		this.nitro = nitro;
		System.out.println("Introduzca el porcentaje de composici贸n de nitrogeno: ");
        Scanner nt= new Scanner(System.in);
        nitro=nt.nextLine();
		
	}
	public String getOxigeno() {
		return oxigeno;
	}
	public void setOxigeno(String oxigeno) {
		this.oxigeno = oxigeno;
		System.out.println("Introduzca el porcentaje de composici贸n de oxigeno: ");
        Scanner ox= new Scanner(System.in);
        oxigeno=ox.nextLine();
	}
	public String getDioxido() {
		return dioxido;
	}
	public void setDioxido(String dioxido) {
		this.dioxido = dioxido;
		System.out.println("Introduzca el porcentaje de composici贸n de dioxido: ");
        Scanner diox= new Scanner(System.in);
        dioxido=diox.nextLine();
	}
	public String getVapor() {
		return vapor;
	}
	public void setVapor(String vapor) {
		this.vapor = vapor;
		 System.out.println("Introduzca el porcentaje de composici贸n de vapor de agua: ");
	        Scanner vap= new Scanner(System.in);
	        vapor=	vap.nextLine();
	}
	@Override
	public String toString() {
		return "Congelados por agua % de nitrogeno: " + nitro +
				"%, oxigeno: " + oxigeno + "%, dioxido:" + dioxido + 
				"%y de  vapor:" + vapor + "";
	}
	

}
